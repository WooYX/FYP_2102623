<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".Motivational">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Mtv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#673AB7"
            android:text="Welcome to Motivation Page"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:fontFamily="@font/vidaloka"
            android:lineSpacingExtra="8dp" />


        <ImageView
            android:id="@+id/personalgoal"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="#CCFF90"
            app:srcCompat="@drawable/personalgoal" />

        <TextView
            android:id="@+id/personalgoaltxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#536DFE"
            android:fontFamily="@font/mmedium"
            android:lineSpacingExtra="8dp"
            android:text="Personal Goals"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/achivement"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="#F4FF81"
            app:srcCompat="@drawable/achivements" />

        <TextView
            android:id="@+id/achivementtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#7C4DFF"
            android:fontFamily="@font/mmedium"
            android:lineSpacingExtra="8dp"
            android:text="Achivements"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/motivationresource"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="#FFFF8D"
            app:srcCompat="@drawable/motivationsource" />

        <TextView
            android:id="@+id/motivationresourcetxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#448AFF"
            android:fontFamily="@font/mmedium"
            android:lineSpacingExtra="8dp"
            android:text="Motivation Resources"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>